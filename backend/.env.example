# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=itunes_podcasts_dev
DB_USER=postgres
DB_PASSWORD=postgres
DB_SYNCHRONIZE=true
DB_LOGGING=true
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# iTunes API
ITUNES_API_URL=https://itunes.apple.com
ITUNES_API_TIMEOUT=10000
ITUNES_API_RETRY_ATTEMPTS=3
ITUNES_API_RETRY_DELAY=1000

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# CORS
CORS_ORIGIN=http://localhost:3001

# Logging
LOG_LEVEL=debug

# Security
HELMET_ENABLED=true
COMPRESSION_ENABLED=true